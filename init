#!/bin/bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# Change this directory to home
export HOME=$DIR

# Add local bin
export PATH=$DIR/root/bin/:$PATH

# Path to servers
SERVER=torus.cs.berkeley.edu
PROJ_PATH=$1

function send-usage {
  echo "Usage: send [-d DIR] -i ID FILES"
}

function send {
  OPTIND=1
  ID=
  FILES=
  DIR=$PROJ_PATH
  while getopts "i:d:h" O; do
    case $O in
      i)
        ID=$OPTARG
        ;;
      d)
        DIR=$PROJ_PATH/$OPTARG
        ;;
      h)
        send-usage; return
        ;;
      ?)
        send-usage; return 1
        ;;
    esac
  done

  shift $((OPTIND-1))
  FILES=$*
  if [ "$FILES" == "" ] || [ -z $ID ]; then
    send-usage; return 1
  fi

  if [ -z $DIR ]; then
    echo Error: No DIR set.; return 1
  fi

  ADDRESS=cs164-$ID@$SERVER
  scp -r $FILES $ADDRESS:$DIR
}

function connect {
  if [ -z $1 ]; then
    echo "Usage: connect ID"; return 1
  fi
  ssh cs164-$1@$SERVER
}
